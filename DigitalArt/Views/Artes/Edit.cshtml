@model DigitalArt.Models.Arte

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Arte</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdArte" />
            <div class="form-group">
                <label asp-for="NombreArte" class="control-label"></label>
                <input asp-for="NombreArte" class="form-control" />
                <span asp-validation-for="NombreArte" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescripcionArte" class="control-label"></label>
                <input asp-for="DescripcionArte" class="form-control" />
                <span asp-validation-for="DescripcionArte" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LinkArte" class="control-label"></label>
                <input asp-for="LinkArte" class="form-control" />
                <span asp-validation-for="LinkArte" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Img" class="control-label"></label>
                <input asp-for="Img" class="form-control" />
                <span asp-validation-for="Img" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaRegistro" class="control-label"></label>
                <input asp-for="FechaRegistro" class="form-control" />
                <span asp-validation-for="FechaRegistro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn  btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar a listar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
