@model IEnumerable<DigitalArt.Models.Usuario>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<style>

    * {
        box-sizing: border-box;
    }

    /* efectos para la etiqueta  section*/

    section {
        display: flex;
        justify-content: center;
        gap: 1rem;
        flex-wrap: wrap;
    }
    /* efectos para la etiqueta article*/
    .card {
        display: flex;
        flex: 0 1 300px;
        flex-direction: column;
        border: 1px solid black;
        border-radius: 1rem;
        padding: 2rem;
        background: rgba(0, 0, 0, 0.7)url("https://images-wixmp-ed30a86b8c4ca887773594c2.wixmp.com/f/706229b9-d68f-4fc7-9792-1fb41a6e19fb/devhtgj-28355594-7928-4709-83cb-c6977bbf1a35.png?token=eyJ0eXAiOiJKV1QiLCJhbGciOiJIUzI1NiJ9..MBj9oVs5BL7GjiXR4dxvlueHTOpIc9ySfaeHY9TAApM");
        height: 100%;
        height: 100%;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        background-blend-mode: darken;
    }
    /* efectos para la etiqueta img*/
    article img {
        order: -1;
        align-self: center;
    }
    /* efectos para la etiqueta boton del articulo */

</style>
<section>
@foreach (var item in Model)
{

    <div class="card">
        <div class="card-header">

            <p class="card-text">
                @Html.DisplayNameFor(model => model.NombreUsuarios)
            </p>
            <p class="card-text">
                @Html.DisplayNameFor(model => model.DireccionUsuarios)
            </p>
                <p class="card-text">
                @Html.DisplayNameFor(model => model.TelefonoUsuarios)
                    </p>
            <p class="card-text">
                @Html.DisplayNameFor(model => model.FechaRegistro)
            </p>

        </div>
        <div class="card-body">


            <p class="card-text">
                @Html.DisplayFor(modelItem => item.NombreUsuarios)
            </p>
            <p class="card-text">
                @Html.DisplayFor(modelItem => item.DireccionUsuarios)
            </p>
            <p class="card-text">
                @Html.DisplayFor(modelItem => item.TelefonoUsuarios)
            </p>
            <p class="card-text">
                @Html.DisplayFor(modelItem => item.FechaRegistro)
            </p>
            <p class="card-text">
                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.IdUsuarios">Edit</a> <br>
                    <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.IdUsuarios">Details</a> <br>
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.IdUsuarios">Delete</a> <br>
            </p>


        </div>
    </div>

}
    <br>
</section>
