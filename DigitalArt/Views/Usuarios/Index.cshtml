@model IEnumerable<DigitalArt.Models.Usuario>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

@foreach (var item in Model)
{

    <div class="card text-white bg-dark mb-3" style="max-width: 18rem;">
        <div class="card-header">

            <p class="card-text">
                @Html.DisplayNameFor(model => model.NombreUsuarios)
            </p>
            <p class="card-text">
                @Html.DisplayNameFor(model => model.DireccionUsuarios)
            </p>
            <th>
                @Html.DisplayNameFor(model => model.TelefonoUsuarios)
            </th>
            <p class="card-text">
                @Html.DisplayNameFor(model => model.FechaRegistro)
            </p>

        </div>
        <div class="card-body">


            <p class="card-text">
                @Html.DisplayFor(modelItem => item.NombreUsuarios)
            </p>
            <p class="card-text">
                @Html.DisplayFor(modelItem => item.DireccionUsuarios)
            </p>
            <p class="card-text">
                @Html.DisplayFor(modelItem => item.TelefonoUsuarios)
            </p>
            <p class="card-text">
                @Html.DisplayFor(modelItem => item.FechaRegistro)
            </p>
            <p class="card-text">
                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.IdUsuarios">Edit</a> |
                <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.IdUsuarios">Details</a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.IdUsuarios">Delete</a>
            </p>


        </div>
    </div>
}