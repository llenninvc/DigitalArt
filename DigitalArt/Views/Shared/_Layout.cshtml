<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DigitalArt</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DigitalArt.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <style>
        body {
            background: rgba(0, 0, 0,0) url("https://images-wixmp-ed30a86b8c4ca887773594c2.wixmp.com/f/882eb67f-8d3f-470f-a043-0225b551ee06/df29ez5-58bd6203-6f4b-4bc6-845b-2db3970576a8.jpg/v1/fill/w_1920,h_1920,q_75,strp/lighthouse_in_the_dark_times_by_daisanvisart_df29ez5-fullview.jpg?token=eyJ0eXAiOiJKV1QiLCJhbGciOiJIUzI1NiJ9..D80EW4Y_SeZ6_i3j2tv8MFe_AqTqcxS5ey_UOhji2Bc");
            height: 100%;
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            background-blend-mode: darken;
        }

        footer {
            background: #fff url("https://images-wixmp-ed30a86b8c4ca887773594c2.wixmp.com/f/25abe526-6c4c-4aa4-a7c3-79061e53b38a/dfng1fz-f011b833-8fd7-47d3-88e9-b68410a87263.jpg/v1/fill/w_1235,h_647,q_70,strp/hut_in_a_woods_by_refiend_dfng1fz-pre.jpg?token=eyJ0eXAiOiJKV1QiLCJhbGciOiJIUzI1NiJ9..3fg4E5j34aHqwVLw5lJY29wRPGcdSdyiQknS3UDP7E8");
            color: #fff;
            background-position: top;
            background-repeat: no-repeat;
            background-size: cover;
            background-blend-mode: darken;
        }

        /* efectos para la etiqueta p*/
        p {
            font-family: "Segoe UI";
            color: rgb(238, 238, 236);
            text-shadow: 0px 0px #fff;
            text-align: justify;
        }

        .text{
            font-family: "Segoe UI";
            color: rgb(238, 238, 236);
            text-shadow: 0px 0px #fff;
            text-align: justify;
        }

       i {
            font-family: "Segoe UI";
            color: rgb(238, 238, 236);
            text-shadow: 0px 0px #fff;
            text-align: justify;
        }
        /* efectos para la etiqueta  h2*/
        h1 {
            font-family: monospace;
            color: rgb(238, 238, 236);
            text-shadow: 0px 0px #fff;
            text-align: justify;
        }
        h2 {
            font-family: monospace;
            color: rgb(238, 238, 236);
            text-shadow: 0px 0px #fff;
            text-align: justify;
        }
        /* efectos para la etiqueta h4*/

        h4 {
            font-family: serif;
            text-align: justify;
            color: rgb(238, 238, 236);
        }
        /* efectos para la etiqueta 3*/
        h3 {
            font-family: serif;
            font-size: 60px;
            line-height: 32px;
            letter-spacing: 8px;
            color: rgb(238, 238, 236);
            position: relative;
            text-align: center;
        }

        * {
            box-sizing: border-box;
        }

        /* efectos para la etiqueta  section*/

        section {
            display: flex;
            justify-content: center;
            gap: 1rem;
            flex-wrap: wrap;
        }
        /* efectos para la etiqueta article*/
        .card {
            display: flex;
            flex: 0 1 300px;
            flex-direction: column;
            border: 1px solid black;
            border-radius: 1rem;
            padding: 1rem;
            background: rgba(0, 0, 0, 0.7)url("https://images-wixmp-ed30a86b8c4ca887773594c2.wixmp.com/f/706229b9-d68f-4fc7-9792-1fb41a6e19fb/devhtgj-28355594-7928-4709-83cb-c6977bbf1a35.png?token=eyJ0eXAiOiJKV1QiLCJhbGciOiJIUzI1NiJ9..MBj9oVs5BL7GjiXR4dxvlueHTOpIc9ySfaeHY9TAApM");
            height: 100%;
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            background-blend-mode: darken;
        }
        /* efectos para la etiqueta img*/
        .card img {
            order: -1;
            align-self: center;
                width: 80px;
                height: 80px;
                border-radius: 100%;
                margin: auto;
                display: block;
            }
        /* efectos para la etiqueta boton del articulo */
        button {
            
            color: white;
            padding: 0.5rem;
            border: none;
            border-radius: 1rem;
            font-size: 1.2rem;
            cursor: pointer;
        }
    </style>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</head>
<body>
  
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">DigitalArt</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Usuarios" asp-action="Index">Usuarios</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Artes" asp-action="Index">Artes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Opiniones" asp-action="Index">Opiniones</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

    <div class="container">
        <main role="main" class="pb-4">
            @RenderBody()
        </main>
    </div>
</body>
    <footer class="border-top footer text-muted">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 col-md-6 col-xl-4">
                    <div class="c">
                        <h4>Colaborador:</h4>
                        <i class="pi pi-user"> Luis Lennin</i><br>
                    </div>
                </div>
                <div class="col-sm-12 col-md-6 col-xl-4">
                    <div class="b">
                        <h4>Contactos:</h4>
                        <i class="pi pi-whatsapp"> Teléfono:+52 9531332959</i><br>

                    </div>
                </div>
                <div class="col-sm-12 col-md-6 col-xl-4">
                    <div class="a">
                        <h4>Redes Sociales</h4>
                        <i class="pi pi-twitter"> Twitter:ArtOnline</i><br>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</html>
