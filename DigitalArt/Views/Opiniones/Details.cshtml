@model DigitalArt.Models.Opinione

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles</h1>

<div>
    <h4>Opinione</h4>
    <hr />
    <dl class="row">
@* muestra los detalles de un registro *@
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NombreOpinion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreOpinion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DescripcionOpinion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DescripcionOpinion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaRegistro)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaRegistro)
        </dd>
    </dl>
</div>
<div>
@*botones para editar y listar*@
    <a asp-action="Edit" asp-route-id="@Model?.IdOpinion" type="button" class="btn btn-warning">Editar</a>
    <a asp-action="Index" type="button" class="btn btn-primary">Regresar a Listar</a>
</div>
