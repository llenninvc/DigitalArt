@model IEnumerable<DigitalArt.Models.Opinione>

@{
    ViewData["Title"] = "Index";
}

<h1>Opiniones</h1>
@*botón neon para crear opiniones*@
<p>
    <a asp-action="Create" type="button" class="neon-button neon-button__2">Crear Opinión</a>
</p>
@*formato de card*@
<section>
@*imprime todos los datos de la BD en cards*@
@foreach (var item in Model)
{
        <div class="card">
            <div class="card-header">
            </div>
            <div class="card-body">
@*muestra en la card la descripción y el dato que se trae de la bd  *@
                <p class="card-text">
                @Html.DisplayNameFor(model => model.NombreOpinion):
                </p>
                <p class="card-text">
                    @Html.DisplayFor(modelItem => item.NombreOpinion)
                </p>

                <p class="card-text">
                @Html.DisplayNameFor(model => model.DescripcionOpinion):
                </p>
                <p class="card-text">
                    @Html.DisplayFor(modelItem => item.DescripcionOpinion)
                </p>

                <p class="card-text">
                @Html.DisplayNameFor(model => model.FechaRegistro):
                </p>
                <p class="card-text">
                    @Html.DisplayFor(modelItem => item.FechaRegistro)
                </p>
@*muestra los botones de editar,eliminar y detalles*@
                <p class="card-text">
                    <a asp-action="Edit" type="button" class="btn btn-warning" asp-route-id="@item.IdOpinion">Edit</a> 
                    <a asp-action="Details" type="button" class="btn btn-primary" asp-route-id="@item.IdOpinion">Details</a> 
                    <a asp-action="Delete" type="button" class="btn btn-danger" asp-route-id="@item.IdOpinion">Delete</a>
                </p>
            </div>
@*imagen del logo de la card*@
            <img src="https://images-wixmp-ed30a86b8c4ca887773594c2.wixmp.com/f/62142078-a6c3-4fab-9f03-9ede1adbf7d1/de24m6w-7daa02b3-76aa-47fc-875c-c907753606d2.png/v1/crop/w_92,h_92,x_3,y_0,scl_0.10562571756602,strp/rin_by_dav_19_de24m6w-92s.png?token=eyJ0eXAiOiJKV1QiLCJhbGciOiJIUzI1NiJ9..tFsvUbXDPJFjtjx_W3bDoMkLV1QCZdRuBwjnTlCl6gU" alt="">
        </div>

}
<br>
</section>
