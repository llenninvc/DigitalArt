@model DigitalArt.Models.Opinione

@{
    ViewData["Title"] = "Edit";
}
<div>
    <a asp-action="Index" class="neon-button neon-button__1">Regresar a listar</a>
</div>
<br/>
<h1>Editar</h1>

<h4>Opinione</h4>
<hr />
<div class="row">
    <div class="col-md-4">
@* Función para editar los datos de un registro ya creado *@
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdOpinion" />
            <div class="form-group">
                <label asp-for="NombreOpinion" class="control-label"></label>
                <input asp-for="NombreOpinion" class="form-control" pattern="[A-Za-z0-9áéíóú:,\." ]+" />
                <span asp-validation-for="NombreOpinion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescripcionOpinion" class="control-label"></label>
                <input asp-for="DescripcionOpinion" class="form-control" pattern="[A-Za-z0-9áéíóú:,\." ]+" />
                <span asp-validation-for="DescripcionOpinion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaRegistro" class="control-label"></label>
                <input asp-for="FechaRegistro" class="form-control"  />
                <span asp-validation-for="FechaRegistro" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
@*botón para guardar cambios *@
                <input type="submit" value="Save" class="btn  btn-success" />
            </div>
        </form>
        <br />
        <br />
        <br />
    </div>
</div>
@*saltos para foramto *@
<br />
<br />
<br />
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
